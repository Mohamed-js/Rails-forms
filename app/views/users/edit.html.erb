<h1> Edit user </h1>

<%= form_with model: @user do |form| %>
  <%= form.text_field :username, placeholder: "Username" %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
            <div><%= message %></div>
    <% end %>
  <%= form.email_field :email, placeholder: "John@example.com" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
            <div><%= message %></div>
    <% end %>
  <%= form.password_field :password, placeholder: "***********" %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
            <div><%= message %></div>
    <% end %>
  <%= form.submit "Sign-Up" %>
<% end %>


